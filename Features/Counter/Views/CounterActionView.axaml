<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ctl="using:HelloAvalonia.UI.Controls"
             xmlns:vm="using:HelloAvalonia.Features.Counter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="HelloAvalonia.Features.Counter.Views.CounterActionView"
             x:DataType="vm:CounterActionViewModel">
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinWidth" Value="150"/>
        </Style>
    </UserControl.Styles>

    <StackPanel Spacing="15">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Command="{Binding IncrementCommand}">
                <ctl:SymbolIconLabel Symbol="Add" Label="Increment"/>
            </Button>
            <Button Command="{Binding DecrementCommand}">
                <ctl:SymbolIconLabel Symbol="Remove" Label="Decrement"/>
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <NumericUpDown Width="150"
                           Height="40"
                           Minimum="0"
                           Maximum="1000000"
                           FormatString="0"
                           VerticalContentAlignment="Center"
                           IsEnabled="{Binding !IsLoading.Value}"
                           Value="{Binding InputCount.Value, Mode=TwoWay}"/>
            <Button Command="{Binding SetCountCommand}">
                <ctl:SymbolIconLabel Symbol="Checkmark" Label="Set Count"/>
            </Button>
        </StackPanel>

        <Button Command="{Binding ResetCommand}">
            <ctl:SymbolIconLabel Symbol="Refresh" Label="Reset"/>
        </Button>
    </StackPanel>
</UserControl>
