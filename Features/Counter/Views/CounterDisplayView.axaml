<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HelloAvalonia.Features.Counter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="HelloAvalonia.Features.Counter.Views.CounterDisplayView"
             x:DataType="vm:CounterDisplayViewModel">
    <StackPanel Spacing="25">
        <TextBlock Text="{Binding Count.Value, StringFormat='Current Count: {0}'}"
                   HorizontalAlignment="Center"
                   FontSize="32" />

        <TextBlock Text="{Binding FizzBuzzState.Value, StringFormat='FizzBuzz State: {0}'}"
                   HorizontalAlignment="Center"
                   FontSize="20" />
    </StackPanel>
</UserControl>