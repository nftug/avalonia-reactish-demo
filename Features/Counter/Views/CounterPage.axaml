<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:HelloAvalonia.Features.Counter.Views"
             xmlns:vm="using:HelloAvalonia.Features.Counter.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="HelloAvalonia.Features.Counter.Views.CounterPage"
             x:DataType="vm:CounterPageViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="40">
        <local:CounterDisplayView DataContext="{Binding DisplayViewModel}"/>
        <local:CounterActionView DataContext="{Binding ActionViewModel}"/>
    </StackPanel>

</UserControl>