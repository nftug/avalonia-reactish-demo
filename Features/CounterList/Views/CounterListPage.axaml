<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HelloAvalonia.Features.CounterList.ViewModels"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HelloAvalonia.Features.CounterList.Views.CounterListPage"
             x:DataType="vm:CounterListPageViewModel">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Spacing="25" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                <Button Content="Add Counter"
                        Command="{Binding AddCommand}"
                        Width="110"
                        Height="35"/>
                <Button Content="Remove Last"
                        Command="{Binding RemoveCommand}"
                        Width="110"
                        Height="35"/>
            </StackPanel>

            <TextBlock Text="{Binding CountersSum.Value, StringFormat='Counters Sum: {0}'}"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding CountersViewEnvelope.View}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:CounterListItemViewModel">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="12"
                                    HorizontalAlignment="Center"
                                    Margin="4">
                            <Label Content="{Binding Value}"
                                   MinWidth="40"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center"/>

                            <Button Command="{Binding IncrementCommand}"
                                    Width="40">
                                <fa:SymbolIcon Symbol="Add"/>
                            </Button>
                            <Button Command="{Binding DecrementCommand}"
                                    Width="40">
                                <fa:SymbolIcon Symbol="Remove"/>
                            </Button>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
