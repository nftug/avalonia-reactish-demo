<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:framework="using:HelloAvalonia.Framework.Views"
        xmlns:counter="using:HelloAvalonia.Features.Counter.Views"
        xmlns:vm="using:HelloAvalonia.Shell.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HelloAvalonia.Shell.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hello Avalonia" Width="1024" Height="680"
        WindowStartupLocation="CenterScreen">

    <framework:ContextProvider Context="{Binding DialogService}">
        <framework:ContextProvider Context="{Binding CounterContext}">
            <counter:CounterPage/>
        </framework:ContextProvider>
    </framework:ContextProvider>

</Window>
