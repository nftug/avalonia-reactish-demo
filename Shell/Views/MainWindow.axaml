<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fr="using:HelloAvalonia.Framework.Views"
        xmlns:nav="using:HelloAvalonia.UI.Navigation.Views"
        xmlns:vm="using:HelloAvalonia.Shell.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="HelloAvalonia.Shell.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Hello Avalonia" Width="1024" Height="680"
        WindowStartupLocation="CenterScreen">

    <fr:ContextProvider Context="{Binding DialogService}">
        <fr:ContextProvider Context="{Binding NavigationContext}">
            <fr:ContextProvider Context="{Binding CounterContext}">
                <nav:NavigationView DataContext="{Binding NavigationViewModel}" />
            </fr:ContextProvider>
        </fr:ContextProvider>
    </fr:ContextProvider>

</Window>
