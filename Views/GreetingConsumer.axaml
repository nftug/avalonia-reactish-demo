<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HelloAvalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="HelloAvalonia.Views.GreetingConsumer"
             x:DataType="vm:GreetingConsumerViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="Text from GreetingContext:"
                   HorizontalAlignment="Center"
                   FontSize="18" />

        <TextBlock Text="{Binding Context.Text.Value}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"/>
    </StackPanel>

</UserControl>